        <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
                <Button fx:id="circleButton" lineSpacing="1.0" mnemonicParsing="false" onAction="#onCircleAction" text="Circle">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
               <HBox.margin>
                  <Insets left="5.0" top="5.0" />
               </HBox.margin></Button>
                <Button fx:id="rectangleButton" lineSpacing="1.0" mnemonicParsing="false" onAction="#onRectangleAction" text="Rectangle">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Button>
            <ColorPicker fx:id="colorPicker" onAction="#onColorAction">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></ColorPicker>
            <TextField fx:id="sizeField" onAction="#onSizeAction" promptText="size">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
            </HBox>
        </top>
        <right>
            <VBox BorderPane.alignment="CENTER">
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveAction" prefHeight="25.0" prefWidth="52.0" text="Save">
               <VBox.margin>
                  <Insets right="5.0" />
               </VBox.margin></Button>
                <Button fx:id="undoButton" mnemonicParsing="false" onAction="#onUndoAction" prefHeight="25.0" prefWidth="52.0" text="Undo">
               <VBox.margin>
                  <Insets right="5.0" top="5.0" />
               </VBox.margin></Button>
            </VBox>
        </right>
    </BorderPane>
